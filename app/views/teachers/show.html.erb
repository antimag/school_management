<%- model_class = Teacher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table class="table table-striped" border="1">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:qualification) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%if @teacher.present? %>
        <tr>
          <td><%= link_to @teacher.id, teacher_path(@teacher) %></td>
          <td><%= @teacher.full_name %></td>
          <td><%= @teacher.gender %></td>
          <td><%= @teacher.email %></td>
          <td><%= @teacher.phone %></td>
          <td><%= @teacher.full_address %></td>
          <td><%= @teacher.qualification %></td>
          <td>
            <%= link_to t('.new', :default => t("helpers.links.new")),
            new_teacher_path,
            :class => 'btn btn-primary' %>

            <%= link_to "Assign students", assign_students_teacher_path(@teacher),
              :class => 'btn btn-default btn-xs' %>
            <%= link_to "Assign subjects", assign_subjects_teacher_path(@teacher),
              :class => 'btn btn-default btn-xs' %>
          </td>
        </tr>
    <%else%>
      <tr><td colspan="7" align="center"> No records</td></tr>
    <%end%>
  </tbody>
</table>

<%- model_class = Teacher -%>
<div class="page-header">
  <h1>Teacher's students</h1>
</div>
<table class="table table-striped" border="1">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:father_name) %></th>
      <th><%= model_class.human_attribute_name(:mother_name) %></th>
      <th><%= model_class.human_attribute_name(:class_roll_no) %></th>
      <th><%= model_class.human_attribute_name(:date_of_birth) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:birth_place) %></th>
      <th><%= model_class.human_attribute_name(:language) %></th>
      <th><%= model_class.human_attribute_name(:religion) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
    </tr>
  </thead>
  <tbody>
    <%if @teacher.students.present? %>
      <% @teacher.students.each do |student| %>
        <tr>
          <td><%= link_to student.id, student_path(student) %></td>
          <td><%= student.full_name %></td>
          <td><%= student.father_name %></td>
          <td><%= student.mother_name %></td>
          <td><%= student.class_roll_no %></td>
          <td><%= student.date_of_birth %></td>
          <td><%= student.gender %></td>
          <td><%= student.birth_place %></td>
          <td><%= student.language %></td>
          <td><%= student.religion %></td>
          <td><%= student.category %></td>
          <td><%= student.full_address %></td>
          <td><%= student.phone %></td>
          <td><%= student.email %></td>
        </tr>
      <% end %>
    <%else%>
      <tr><td colspan="14" align="center"> No records</td></tr>
    <%end%>
  </tbody>
</table>

<%- model_class = Subject -%>
<div class="page-header">
  <h1>Teacher's subjects </h1>
</div>
<table class="table table-striped" border="1">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%if @teacher.subjects.present? %>
      <%  @teacher.subjects.each do |subject| %>
        <tr>
          <td><%= link_to subject.id, subject_path(subject) %></td>
          <td><%= subject.name %></td>
          <td><%= subject.code %></td>
          <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        subject_path(subject), :class => 'btn btn-default btn-xs' %>            
            </td>
        </tr>
      <% end %>
    <%else%>
      <tr>
        <td colspan="3" align="center"> No records</td>
        <td><%= link_to t('.new', :default => t("helpers.links.new")),
            new_subject_path,
            :class => 'btn btn-primary' %></td> 
       </tr>
    <%end%>
  </tbody>
</table>

<%= link_to t('.back', :default => t("helpers.links.back")),
              teachers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_teacher_path(@teacher), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              teacher_path(@teacher),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
